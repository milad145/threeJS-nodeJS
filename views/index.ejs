<body>
<div id="cssdiv"
     style="position: absolute;left:20px;top:20px;z-index: 10;background-color: white;width:200px;height:200px;display: none"></div>
<div class="d-flex" id="main-section">
    <div class="left-side manage-side">
        <div id="import-panel">
            <input id="import-file" type="file" accept=".glb" hidden>
            <div class="objects-box mb-3" id="image-box">
                <div class="btn btn-light btn-block import-object mb-2">
                    <div class="import-object-logo">
                        <img src="/images/image.svg" alt="image">
                    </div>
                    <div class="import-object-name">
                        Image
                    </div>
                    <div class="import-object-add-logo" id="import-image">
                        <img src="/images/plus.svg" alt="upload">
                    </div>
                </div>
            </div>

            <div class="objects-box mb-3" id="video-box">
                <div class="btn btn-light btn-block import-object mb-2">
                    <div class="import-object-logo">
                        <img src="/images/video.svg" alt="video">
                    </div>
                    <div class="import-object-name">
                        Video
                    </div>
                    <div class="import-object-add-logo" id="import-video">
                        <img src="/images/plus.svg" alt="upload">
                    </div>
                </div>
            </div>

            <div class="objects-box mb-3" id="model-box">
                <div class="btn btn-light btn-block import-object mb-2">
                    <div class="import-object-logo">
                        <img src="/images/model.svg" alt="model">
                    </div>
                    <div class="import-object-name">
                        Model 3D (.glb)
                    </div>
                    <div class="import-object-add-logo" id="import-model">
                        <img src="/images/plus.svg" alt="upload">
                    </div>
                </div>
            </div>

            <!--<div class="objects-box mb-3" id="box-box">
                <div class="btn btn-light btn-block import-object mb-2">
                    <div class="import-object-logo">
                        <img src="/images/model.svg" alt="model">
                    </div>
                    <div class="import-object-name">
                        Box
                    </div>
                    <div class="import-object-add-logo" id="import-box">
                        <img src="/images/plus.svg" alt="upload">
                    </div>
                </div>
            </div>

            <div class="objects-box mb-3" id="audio-box">
                <div class="btn btn-light btn-block import-object mb-2">
                    <div class="import-object-logo">
                        <img src="/images/audio.svg" alt="audio">
                    </div>
                    <div class="import-object-name">
                        Audio
                    </div>
                    <div class="import-object-add-logo" id="import-audio">
                        <img src="/images/plus.svg" alt="upload">
                    </div>
                </div>
            </div>-->
        </div>
    </div>
    <div id="scene" class="middle-side"></div>
    <div class="right-side manage-side">
        <div id="manage-panel">
            <div class="form-group">
                <h2>Position</h2>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">X</div>
                    </div>
                    <input type="number" step="0.01" min="-5000" max="5000" class="form-control" id="position-x"
                           value="0">
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Y</div>
                    </div>
                    <input type="number" step="0.01" min="-5000" max="5000" class="form-control" id="position-y"
                           value="0">
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Z</div>
                    </div>
                    <input type="number" step="0.01" min="-5000" max="5000" class="form-control" id="position-z"
                           value="0">
                </div>
            </div>

            <div class="form-group">
                <h2>Rotation</h2>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">X</div>
                    </div>
                    <input type="number" step="0.01" min="-180" max="180" class="form-control" id="rotation-x"
                           value="0">
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Y</div>
                    </div>
                    <input type="number" step="0.01" min="-180" max="180" class="form-control" id="rotation-y"
                           value="0">
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Z</div>
                    </div>
                    <input type="number" step="0.01" min="-180" max="180" class="form-control" id="rotation-z"
                           value="0">
                </div>
            </div>

            <div class="form-group">
                <h2>Scale</h2>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">All</div>
                    </div>
                    <input type="number" step="0.01" min="0.000001" max="1000" class="form-control" id="scale"
                           value="1">
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">X</div>
                    </div>
                    <input type="number" step="0.01" min="0.000001" max="1000" class="form-control" id="scale-x"
                           value="1">
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Y</div>
                    </div>
                    <input type="number" step="0.01" min="0.000001" max="1000" class="form-control" id="scale-y"
                           value="1">
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Z</div>
                    </div>
                    <input type="number" step="0.01" min="0.000001" max="1000" class="form-control" id="scale-z"
                           value="1">
                </div>
            </div>

        </div>
    </div>
</div>
<div id="progress-box-wrapper" class="blur-wrapper">
    <div class="progress-box">
        <div class="mb-3 text-center">
            <b id="stepName">Downloading</b>
        </div>
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                 id="progress-value"
                 aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 10%"></div>
        </div>
    </div>
</div>
<div id="videoType-wrapper" class="blur-wrapper" style="">

    <div class="card card-box">
        <div class="box-header p-2">
            <i class="fa fa-close" id="videoType-wrapper-close"></i>
        </div>
        <div class="box-body">
            <form class="side video-settings-sec p-3">
                <div class="full-width">
                    <h5 class="m-3 text-center">Customize Your Video</h5>
                    <div class="card mb-3">
                        <span>Autoplay</span>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="autoplay-video">
                        </div>
                    </div>
                    <div class="card mb-3">
                        <span>Loop</span>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="loop-video">
                        </div>
                    </div>
                    <div class="card mb-3">
                        <span>Muted</span>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="muted-video">
                        </div>
                    </div>
                    <div class="card mb-3">
                        <span>Remove Background</span>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="chromakey-video">
                        </div>
                    </div>
                    <div id="color-part" class="card mb-3">
                        <span>Remove Color</span>
                        <div id="colorSelector">
                            <input class="form-check-input" type="color" value="#00ff00" id="color-video">
                        </div>
                    </div>
                </div>
                <div class="full-width text-center">
                    <button class="btn btn-primary pe-5 ps-5" type="button" id="insertVideo">Next</button>
                </div>
            </form>
            <div class="side video-preview-sec full-width p-3">
                <video src="" autoplay controls class="full-width"></video>
            </div>
        </div>
    </div>
</div>

</body>

